@using BookWebApp.ViewModels;
@model IEnumerable<BookVM>

<h1>Books List</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model=>model.Title)</th>
            <th scope="col">@Html.DisplayNameFor(model=>model.Description)</th>
            <th scope="col">@Html.DisplayNameFor(model=>model.IsRead)</th>
            <th scope="col">@Html.DisplayNameFor(model=>model.DateRead)</th>
            <th scope="col">@Html.DisplayNameFor(model=>model.Rate)</th>
            <th scope="col">@Html.DisplayNameFor(model=>model.Genre)</th>
            <th scope="col">@Html.DisplayNameFor(model=>model.CoverUrl)</th>
           
           
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
          <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.IsRead</td>
            <td>@item.DateRead</td>
            <td>@item.Rate</td>
            <td>@item.Genre</td>
            <td>@item.CoverUrl</td>
          </tr>
        }

      
    </tbody>
</table>